@model distribution_mvc.ViewModel.ScheduleViewModel
@{
    ViewBag.Title = "Schedule";
}
<h2>Student Name: @Model.student.name</h2>
<h3>Selected Courses:</h3>
@if (Model.schedule_collection.Count > 0)
{
    <ul>
        @for (int i = 0; i < Model.schedule_collection.Count; i++)
        {
        <li>
            @Model.course_collection.Where(c => c.id == Model.schedule_collection[i].course_id).FirstOrDefault().title
        </li>
        }
    </ul>
}
else
{
    <h4>This student have no courses.</h4>
}
