@model distribution_mvc.ViewModel.ScheduleViewModel
@{
    ViewBag.Title = "Student's Schedule";
    ViewBag.Description = "";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>@ViewBag.Description</small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <h3>@Model.student.name's @ViewBag.Title</h3>
                @if (Model.schedule_collection.Count > 0)
                {
                    <ul>
                        @for (int i = 0; i < Model.schedule_collection.Count; i++)
                        {
                            <li>
                                @Model.course_collection.Where(c => c.id == Model.schedule_collection[i].course_id).FirstOrDefault().title
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <h4>This student have no courses.</h4>
                }
            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->
