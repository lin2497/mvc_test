@model distribution_mvc.ViewModel.MyScheduleViewModel
@{
    ViewBag.Title = "My Schedule";
    ViewBag.Description = "";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>@ViewBag.Description</small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.Title</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    @if (Model.schedule_collection.Count > 0)
                    {
                        <table class="table table-hover">
                            <tr>
                                <td>Course Name</td>
                                <td>Action</td>
                            </tr>
                            @for (int i = 0; i < Model.schedule_collection.Count; i++)
                            {
                                <tr>
                                    <td>
                                        @Model.course_collection.Where(c => c.id == Model.schedule_collection[i].course_id).FirstOrDefault().title
                                    </td>
                                    <td>
                                        @Html.ActionLink("Remove", "removeCourse", "Html", new { course_id = Model.schedule_collection[i].course_id }, null)
                                    </td>
                                </tr>
                            }
                        </table>
                    }
                    else
                    {
                        <h4>You didn't pick any course yet.</h4>
                    }
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->
