@model distribution_mvc.ViewModel.ClassmateViewModel
@{
    ViewBag.Title = "Classmates";
    ViewBag.Description = "Displaying your classmates' status";
}
<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        @ViewBag.Title
        <small>@ViewBag.Description</small>
    </h1>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">@ViewBag.Title</h3>
                </div><!-- /.box-header -->
                <div class="box-body table-responsive no-padding">
                    <table class="table table-striped">
                        <tr>
                            <td>Student ID</td>
                            <td>Name</td>
                            <td>Action</td>
                        </tr>
                        @for (int i = 0; i < Model.clssmate_collection.Count; i++)
                        {
                            <tr>
                                <td>@Model.clssmate_collection[i].id</td>
                                <td>@Model.clssmate_collection[i].name</td>
                                <td>@Html.ActionLink("See Detail", "Schedule", "Html", new { student_id = Model.clssmate_collection[i].id }, null)</td>
                            </tr>
                        }
                    </table>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>
</section><!-- /.content -->