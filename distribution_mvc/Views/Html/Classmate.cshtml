@model distribution_mvc.ViewModel.ClassmateViewModel
@{
    ViewBag.Title = "Classmate";
}

<h2>Classmate</h2>
<table class="table table-striped">
    <tr>
        <td>Student ID</td>
        <td>Name</td>
        <td>Schedule</td>
    </tr>
    @for (int i = 0; i < Model.clssmate_collection.Count; i++)
    {
        <tr>
            <td>@Model.clssmate_collection[i].id</td>
            <td>@Model.clssmate_collection[i].name</td>
            <td>@Html.ActionLink("See Detail", "Schedule", "Html", new { student_id = Model.clssmate_collection[i].id }, null)</td>
        </tr>
    }
</table>
