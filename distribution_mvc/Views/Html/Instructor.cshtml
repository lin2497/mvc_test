@model distribution_mvc.ViewModel.InstructorViewModel
@{
    ViewBag.Title = "Instructor";
}

<h2>Instructors</h2>
<table class="table table-striped">
    <tr>
        <td>Instructor Name</td>
        <td>Number of Courses Teaching</td>
    </tr>
    @for (int i = 0; i < Model.instructor_collection.Count; i++)
    {
        <tr>
            <td>@Model.instructor_collection[i].name</td>
            <td>@Model.course_collection.Where(x => x.instructor_id == Model.instructor_collection[i].id).Count()</td>
        </tr>
    }
</table>

